<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SettingsItem">
        <attr name="titleText" format="string"/>
        <attr name="titleColor" format="color"/>
        <attr name="titleSize" format="dimension"/>

        <attr name="subtitleText" format="string"/>
        <attr name="subtitleColor" format="color"/>
        <attr name="subtitleSize" format="dimension"/>
        <attr name="subtitleVisibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>

        <attr name="switchVisibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
            <enum name="gone" value="2"/>
        </attr>
    </declare-styleable>
</resources>