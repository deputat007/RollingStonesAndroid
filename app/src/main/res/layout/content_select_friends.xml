<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_group_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/offset_small"
        android:layout_marginStart="@dimen/offset_small"
        android:layout_marginTop="@dimen/offset_small">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/text_input_edit_text_group_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_group_title"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/content_empty_list"/>

        <include layout="@layout/content_users"/>
    </LinearLayout>

</LinearLayout>